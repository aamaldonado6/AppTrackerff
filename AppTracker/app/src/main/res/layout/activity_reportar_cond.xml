<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".menus.ReportarCond">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:paddingTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="100dp"
                android:text="Reporte"
                android:textColor="@color/white"
                android:textSize="30sp" />


        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/reporte"/>
        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_logo"
            android:text="Conductor rebasa en               \nlugares inapropiados  "
            android:paddingTop="20pt"
            android:paddingBottom="10dp"
            />
        <Switch
            android:id="@+id/switch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/switch1"
            android:text="Recoge pasajeros fuera          \ndel area de embarque"
            android:paddingBottom="10dp"
            />
        <Switch
            android:id="@+id/switch3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/switch2"
            android:text="Se mantiene el vehÃ­culo          \nestacionado mucho tiempo"
            android:paddingBottom="10dp"
            />
        <Switch
            android:id="@+id/switch4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/switch3"
            android:text="Para a recargar combustible  "
            />

        <RelativeLayout
            android:id="@+id/rellay1"
            android:layout_below="@+id/switch4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20pt"
            >
            <TextView
                android:id="@+id/tv_comentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                android:text="Escribe un comentario:"
                android:textColor="@color/white"
                android:textSize="30sp"/>
            <LinearLayout
                android:id="@+id/linlay"
                android:layout_below="@+id/tv_comentario"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="336dp"
                        android:layout_height="133dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/et_bg"
                        android:fontFamily="sans-serif"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/linlay"
                android:layout_centerHorizontal="true"
                android:text="Guardar Datos"
                android:background="@drawable/btn_bg"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"

                />
        </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>

