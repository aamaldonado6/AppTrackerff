<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fo2"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/txtTuVelocidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Tu Velocidad:"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/txtlongitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="0"
                android:visibility="invisible"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/txtlatitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="0"
                android:visibility="invisible"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtVelocidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txtTuVelocidad"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="110dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="-11dp"
                android:text="....."
                android:textSize="36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="KM/H"
                android:textSize="40dp" />


        </RelativeLayout>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:rowCount="1"
            android:visibility="visible">

            <android.support.v7.widget.CardView
                android:id="@+id/cardReportar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:id="@+id/layReportar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="19dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">


                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/reporte" />

                    <TextView
                        android:id="@+id/txt_reportarConductor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:contentDescription="@string/common_google_play_services_notification_channel_name"
                        android:text="  Reportar\n Conductor"
                        android:textColor="#6f6f6f"
                        android:textSize="18sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/cardMapa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:id="@+id/linearL1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="25dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <ImageView
                        android:id="@+id/imgMapa"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/gps" />

                    <TextView
                        android:id="@+id/txt_mapa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:contentDescription="@string/common_google_play_services_notification_channel_name"
                        android:text="Mapa"
                        android:textColor="#6f6f6f"
                        android:textSize="18sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/codigoQr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:id="@+id/linearCome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="21dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/qr" />

                    <TextView
                        android:id="@+id/txt_Comentario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:contentDescription="@string/common_google_play_services_notification_channel_name"
                        android:text=" Escanear\ncÃ³digo QR"
                        android:textColor="#6f6f6f"
                        android:textSize="18sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:id="@+id/linerExcesos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="19dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:id="@+id/imgls1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/check" />

                    <TextView
                        android:id="@+id/txt_ListaDeExcesos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:contentDescription="@string/common_google_play_services_notification_channel_name"
                        android:text="Excesos de\n  velocidad"
                        android:textColor="#6f6f6f"
                        android:textSize="18sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </GridLayout>


        <LinearLayout
            android:id="@+id/botonP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="70dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >

            <TextView
                android:id="@+id/txt_alert"
                android:layout_width="110dp"
                android:layout_height="58dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-2dp"
                android:background="@drawable/bocadillo"
                android:contentDescription="@string/common_google_play_services_notification_channel_name"
                android:padding="15dp"
                android:text="ALERTA"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="15sp"
                android:textStyle="normal|bold" />

"           <LinearLayout
            android:layout_width="150dp"
            android:layout_height="109dp"
            android:layout_marginTop="-30dp"
            android:id="@+id/LiAnima">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="panico"
                app:lottie_autoPlay="true"
                app:lottie_fileName="ripple.json"
                app:lottie_imageAssetsFolder="assets"
                app:lottie_loop="true"
                 />
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>


</ScrollView>